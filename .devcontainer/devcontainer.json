{
  "name": "Carabassa",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "java.compile.nullAnalysis.mode": "automatic"
      },
      "extensions": [
        "vscjava.vscode-java-pack",
        "vmware.vscode-spring-boot",
        "Vue.volar",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "forwardPorts": [
    8080,
    3000
  ],
  "postCreateCommand": "corepack enable && mvn install -DskipTests -Ddependency-check.skip=true",
  "remoteUser": "vscode"
}